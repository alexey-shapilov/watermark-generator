extends ../_layouts/layout

block title
    title Правильный сервис для наложения watermark на изображения
block description
    meta(name='description' content='Отличный сервис для быстрого наложения watermark на любое изображение, с гибкими настройками и сохранением результата')

block content
    .wrapper
        .maincontent
            .container
                section.result
                    h1.result__title Генератор водяных знаков
                    .result__imagebox#result-box
                        #work
                          #bg
                          #wm
                          #wm-tiles-work
                            #wm-tiles
                        .preloader
                            .preloader__spin
                section.controls
                    h3.controls__title Настройки
                    form#download-img
                        fieldset.noborder
                            .controls__inputs-group
                                label.controls__file-title
                                    span#title-source-bg Исходное изображение
                                    .controls__file#bg-img-control
                                        .input-file.input-file--main
                                            .input-wrapper
                                                input.input.input__file-name(
                                                type='text',
                                                name="name-main",
                                                placeholder="Загрузите изображение",
                                                readonly,
                                                required
                                                )
                                                input.input__file-name-version(
                                                type="hidden",
                                                name="name-version-main"
                                                )
                                            label.label__file(for="input__file-main")
                                                span.icon.icon--upload
                                                input#input__file-main.input__file(
                                                type="file",
                                                name="files"
                                                )
                                            span.error Вы не загрузили изображение
                        fieldset
                            .controls__inputs-group
                                label.controls__file-title
                                    span#title-source-wm Водяной знак
                                    .controls__file#wm-img-control
                                        .input-file.input-file--watermark
                                            .input-wrapper
                                                input.input.input__file-name(
                                                type='text',
                                                name="name-watermark",
                                                placeholder="Загрузите изображение",
                                                readonly,
                                                required
                                                )
                                                input.input__file-name-version(
                                                type="hidden",
                                                name="name-version-watermark"
                                                )
                                            label.label__file(for="input__file-watermark")
                                                span.icon.icon--upload
                                                input#input__file-watermark.input__file(
                                                type="file",
                                                name="files"
                                                )
                                            span.error Вы не загрузили изображение
                        fieldset
                            .controls__inputs-group
                                .controls__switch
                                    label.controls__switch-title
                                        span#title-position Положение
                                        .controls__switch-group
                                            a(href="#four").four.controls__switch-group-but#but-four 4 watermarks
                                            a(href="#one").one.controls__switch-group-but.active#but-one 1 watermark
                                            input(type="hidden" name="mode" val="untile")#mode
                                .position__four-watermark.clearfix#four
                                    .four-watermark__wrapper
                                        .margin-line.horizontal#h-margin-line
                                        .margin-line.vertical#v-margin-line
                                        .four-watermark__table
                                            .four-watermark__row
                                                each val in ['lt', 'ct', 'rt']
                                                    .four-watermark__col
                                                        a(href="" id=val).four-watermark__col-link
                                            .four-watermark__row
                                                each val in['lm', 'cm', 'rm']
                                                    .four-watermark__col
                                                        a(href="" id=val).four-watermark__col-link
                                            .four-watermark__row
                                                each val in['lb', 'cb', 'rb']
                                                    .four-watermark__col
                                                        a(href="" id=val).four-watermark__col-link
                                    .margin__property
                                        .margin__property-block
                                            span.margin__property-name &nbsp;&#8597;
                                            input(type="text" class="margin__property-input" name="x-margin" val="0")#h-margin-val
                                            .margin__property-control
                                                a.margin__property-btn.plus#h-margin-plus
                                                a.margin__property-btn.minus#h-margin-minus
                                        .margin__property-block
                                            span.margin__property-name &#8596;
                                            input(type="text" class="margin__property-input" name="y-margin" val="0")#v-margin-val
                                            .margin__property-control
                                                a.margin__property-btn.plus#v-margin-plus
                                                a.margin__property-btn.minus#v-margin-minus
                                .position__one-watermark.clearfix#one
                                    .one-watermark__wrapper
                                        .one-watermark__table
                                            .one-watermark__row
                                                each val in ['lt', 'ct', 'rt']
                                                    .one-watermark__col
                                                        a(href="" id=val).one-watermark__col-link
                                            .one-watermark__row
                                                each val in['lm', 'cm', 'rm']
                                                    .one-watermark__col
                                                        a(href="" id=val).one-watermark__col-link
                                            .one-watermark__row
                                                each val in['lb', 'cb', 'rb']
                                                    .one-watermark__col
                                                        a(href="" id=val).one-watermark__col-link
                                    .coordinate__property
                                        .coordinate__property-block
                                            span.coordinate__property-name X
                                            input(type="text" id="x-val" class="coordinate__property-input" name="x" value="0" readonly)
                                            .coordinate__property-control
                                                a.coordinate__property-btn.plus#x-val-plus
                                                a.coordinate__property-btn.minus#x-val-minus
                                        .coordinate__property-block
                                            span.coordinate__property-name Y
                                            input(type="text" id="y-val" class="coordinate__property-input" name="y" value="0" readonly)
                                            .coordinate__property-control
                                                a.coordinate__property-btn.plus#y-val-plus
                                                a.coordinate__property-btn.minus#y-val-minus
                        fieldset
                            .slider__box
                                label#opacity-field.slider__box-title Прозрачность
                                div.slider__range
                                input(id="opacity" type="hidden" name="opacity" value="50")
                        fieldset.noborder
                            .controls__inputs-group
                                button(type="reset" id="but-reset").button--reset Сброс
                                button(type="submit" id="but-send").button--submit Скачать