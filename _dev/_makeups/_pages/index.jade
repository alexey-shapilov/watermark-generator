extends ../_layouts/layout

block title
    title Main Page

block content
    .wrapper
        .maincontent
            .container
                section.result
                    h1.result__title Генератор водяных знаков
                    .result__imagebox
                        #bg__wrapper
                            img(src="")#bg__img.result__imagebox-image
                        .drag#watermark
                            img(src="")#drag__img.drug__watermark
                section.controls
                    h3.controls__title Настройка
                    form#download-img
                        fieldset.noborder
                            .controls__inputs-group
                                label.controls__file-title Исходное изображение
                                    .controls__file
                                        .input-file.input-file--main
                                            .input-wrapper
                                                input.input.input__file-name(
                                                type='text',
                                                name="name-main",
                                                placeholder="Загрузите изображение",
                                                readonly,
                                                required
                                                )
                                                input.input__file-name-version(
                                                type="hidden",
                                                name="name-version-main"
                                                )
                                            label.label__file(for="input__file-main")
                                                span.icon.icon--upload
                                                input#input__file-main.input__file(
                                                type="file",
                                                name="files"
                                                )
                        fieldset
                            .controls__inputs-group
                                label.controls__file-title Водяной знак
                                    .controls__file
                                        .input-file.input-file--watermark
                                            .input-wrapper
                                                input.input.input__file-name(
                                                type='text',
                                                name="name-watermark",
                                                placeholder="Загрузите изображение",
                                                readonly,
                                                required
                                                )
                                                input.input__file-name-version(
                                                type="hidden",
                                                name="name-version-watermark"
                                                )
                                            label.label__file(for="input__file-watermark")
                                                span.icon.icon--upload
                                                input#input__file-watermark.input__file(
                                                type="file",
                                                name="files"
                                                )
                        fieldset
                            .controls__inputs-group
                                .controls__switch
                                    label.controls__switch-title Положение
                                        .controls__switch-group
                                            a(class="four" href="#four") 4 watermarks
                                            a(class="one" href="#one").active 1 watermark
                                .position__four-watermark.clearfix#four
                                    .four-watermark__wrapper
                                        .margin-line.horizontal
                                        .margin-line.vertical
                                        .four-watermark__table
                                            .four-watermark__row
                                                each val in ['lt', 'ct', 'rt']
                                                    .four-watermark__col
                                                        a(href="" id=val).four-watermark__col-link
                                            .four-watermark__row
                                                each val in['lm', 'cm', 'rm']
                                                    .four-watermark__col
                                                        a(href="" id=val).four-watermark__col-link
                                            .four-watermark__row
                                                each val in['lb', 'cb', 'rb']
                                                    .four-watermark__col
                                                        a(href="" id=val).four-watermark__col-link
                                    .margin__property
                                        .margin__property-block
                                            span.margin__property-name &nbsp;&#8597;
                                            input(type="text" id="x-margin" class="margin__property-input" name="x-margin" value="1")
                                            .margin__property-control
                                                a.margin__property-btn.plus
                                                a.margin__property-btn.minus
                                        .margin__property-block
                                            span.margin__property-name &#8596;
                                            input(type="text" id="y-margin" class="margin__property-input" name="y-margin" value="1")
                                            .margin__property-control
                                                a.margin__property-btn.plus
                                                a.margin__property-btn.minus
                                .position__one-watermark.clearfix#one
                                    .one-watermark__wrapper
                                        .one-watermark__table
                                            .one-watermark__row
                                                each val in ['lt', 'ct', 'rt']
                                                    .one-watermark__col
                                                        a(href="" id=val).one-watermark__col-link
                                            .one-watermark__row
                                                each val in['lm', 'cm', 'rm']
                                                    .one-watermark__col
                                                        a(href="" id=val).one-watermark__col-link
                                            .one-watermark__row
                                                each val in['lb', 'cb', 'rb']
                                                    .one-watermark__col
                                                        a(href="" id=val).one-watermark__col-link
                                    .coordinate__property
                                        .coordinate__property-block
                                            span.coordinate__property-name X
                                            input(type="text" id="xVal" class="coordinate__property-input" name="x" value="0")
                                            .coordinate__property-control
                                                a.coordinate__property-btn.plus
                                                a.coordinate__property-btn.minus
                                        .coordinate__property-block
                                            span.coordinate__property-name Y
                                            input(type="text" id="yVal" class="coordinate__property-input" name="y" value="0")
                                            .coordinate__property-control
                                                a.coordinate__property-btn.plus
                                                a.coordinate__property-btn.minus
                        fieldset
                            .slider__box
                                label#opacity-field.slider__box-title Прозрачность
                                div.slider__range
                                input(id="opacity" type="hidden")
                        fieldset.noborder
                            .controls__inputs-group
                                button(type="reset" id="reset").button--reset Сброс
                                button(type="submit" id="submit").button--submit Скачать